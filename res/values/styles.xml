<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyActionBar" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenu</item>
        <item name="android:actionMenuTextColor">#0000ff</item>
    </style>

    <!-- style for the action bar backgrounds -->
    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/grey_hardly_see</item>
        <item name="android:backgroundStacked">@color/grey_hardly_see</item>
        <item name="android:backgroundSplit">@color/grey_hardly_see</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="ActionBarMenu">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="MyActionBarTitleText">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>